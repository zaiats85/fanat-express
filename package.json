{
  "name": "node-with-ts",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "start": "tsc && node dist/app.js",
    "go": "npx pm2 start pm2.yaml",
    "dev": "tsc-watch --onSuccess \"node ./dist/app.js\"",
    "watch": "tsc && nodemon src/app.ts",
    "test": "jest --coverage --verbose --passWithNoTests"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/express-rate-limit": "^5.1.1",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "concurrently": "^5.2.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.6",
    "tslint": "^5.20.1",
    "typescript": "^3.9.9"
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/node": "^10.12.12",
    "@types/request-promise": "^4.1.47",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.2",
    "axios": "^0.19.2",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^5.0.0-alpha.7",
    "nodemon": "^2.0.7",
    "pm2": "^4.5.6",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "rxjs": "^7.0.0",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^5.1.3",
    "helmet": "^3.23.3",
    "jsonwebtoken": "^8.5.1",
    "rand-token": "^1.0.1",
